@using eshop.Application.Services.Common.Queries.GetMenuItem
@model List<MenuItemDto>
@{
    Layout = null;
}

    @foreach (var item in Model.Where(n => !n.Name.Contains("خدمات")))
    {
        <li id="nav-menu-item" class="menu-item nav-overlay">
            <a href="#" class="current-link-menu">
                @item.Name
            </a>
            @if (item.Child.Count > 0)
            {
                <ul class="sub-menu is-mega-menu-small">
                    @foreach (var child in item.Child)
                    {
                        <li class="menu-mega-item menu-item-type-mega-menu item-small">
                            <a href="~/products?CatId=@child.CatId" class="mega-menu-link">
                                @child.Name
                            </a>
                        </li>
                    }
                </ul>
            }
        </li>

    }


